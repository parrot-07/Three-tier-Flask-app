pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps { checkout scm }
    }

    stage('Build Docker images') {
      steps {
        script{
         echo "Building backend image"
        sh  "docker compose build"
        }
      }
    }

    stage('Deploy') {
      steps {
        script{
          echo "stopping old containers"
          sh "docker compose down"
          echo "Starting new containers"
          sh "docker compose up -d"
          
          }
        }
      }
  }
}
